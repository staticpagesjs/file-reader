{
  "name": "@static-pages/file-reader",
  "version": "2.0.0",
  "description": "Generic file reader implementation for @static-pages/core.",
  "type": "module",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "browser": "./esm/index.js",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "scripts": {
    "prepack": "npm run build",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --outDir cjs --module commonjs",
    "watch:esm": "tsc --watch",
    "watch:cjs": "tsc --watch --outDir cjs --module commonjs",
    "test": "eslint src && npm run build && jest",
    "clean": "rimraf esm cjs/*.?s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/file-reader.git"
  },
  "keywords": [
    "static-pages",
    "reader"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/file-reader/issues"
  },
  "homepage": "https://staticpagesjs.github.io/",
  "devDependencies": {
    "@types/micromatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "fast-glob": "^3.2.11",
    "micromatch": "^4.0.4"
  }
}
