{
  "name": "@static-pages/file-reader",
  "version": "3.0.0",
  "description": "Generic file reader implementation for @static-pages/core.",
  "type": "module",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "default": "./esm/index.js"
    }
  },
  "scripts": {
    "prepack": "npm run test",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "watch:esm": "tsc --watch",
    "build:cjs": "tsc --project tsconfig.cjs.json && echo { \"type\": \"commonjs\" }>cjs/package.json",
    "watch:cjs": "npm run build:cjs && tsc --project tsconfig.cjs.json --watch",
    "test": "eslint src && npm run build && cross-env NODE_OPTIONS=--experimental-vm-modules jest --run-in-band",
    "clean": "rimraf esm cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/staticpagesjs/file-reader.git"
  },
  "keywords": [
    "static-pages",
    "reader"
  ],
  "author": "László BULIK",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/staticpagesjs/file-reader/issues"
  },
  "homepage": "https://staticpagesjs.github.io/",
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@types/micromatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-plugin-jest": "^26.6.0",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "fast-glob": "^3.2.11",
    "micromatch": "^4.0.4"
  }
}
